<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matirc.esdla_game.Pagina2"
    android:background="@drawable/fondomenu"
    android:orientation="vertical"
    android:weightSum="1">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="0.94"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto2"
            android:id="@+id/textoprincipal"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textSize="20sp"
            android:elegantTextHeight="false" />
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img2"
        android:src="@drawable/concil"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:nestedScrollingEnabled="false"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pregunta2"
        android:id="@+id/textView2"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:background="#ffffff"
        android:layout_marginBottom="15dp"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/elf"
        android:id="@+id/button1"
        android:onClick="PulseButton4"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Goblin"
        android:id="@+id/button2"
        android:onClick="PulseButton2"/>

</LinearLayout>
